<Window x:Class="BinarySearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinarySearch"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="White">
        <WebBrowser x:Name="webBrowser" Margin="10,90,10,10"/>
        <Button Content="Search value in array" HorizontalAlignment="Left" Height="21" Margin="243,48,0,0" VerticalAlignment="Top" Width="126" Click="Button_Click"/>
        <Grid Background="White" VerticalAlignment="Top" Margin="168,17,10,0"  />
        <Label Content="Array (comma separated)" HorizontalAlignment="Left" Margin="20,14,0,0" VerticalAlignment="Top"/>
        <Label Content="Search value" HorizontalAlignment="Left" Margin="20,48,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="tbArray" Height="23" Margin="168,17,10,0" TextWrapping="Wrap" Text="34,25,2,67,4,22" VerticalAlignment="Top" KeyDown="OnKeyDownHandler" />

        <TextBox x:Name="tbValue" MaxLength="5" HorizontalAlignment="Left" Height="23" Margin="168,48,0,0" TextWrapping="Wrap" Text="67" VerticalAlignment="Top" Width="57" TextChanged="NumberValidationTextBox" />

    </Grid>

</Window>
